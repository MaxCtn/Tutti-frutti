 {# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Accueil - Tutti Frutti{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/home.css') }}">
{% endblock %}

{% block body %}
    <div class="container text-center mt-5">
        <div class="welcome-section animate-fade-in">
            <h1 class="animate-slide-in">Bienvenue sur Tutti Frutti</h1>
            <p class="mt-3 animate-fade-in">Organisez votre discoth√®que musicale autour des fruits.</p>
        </div>

        <div class="mt-4 button-section animate-bounce">
            <a href="{{ path('album_search') }}" class="btn btn-info btn-lg explore-btn">Explorer les Albums</a>
        </div>

        <div class="mt-5 image-section animate-zoom-in">
            <img src="{{ asset('images/welcome.png') }}" alt="Image de fruits et musique" class="img-fluid rounded">
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Add animation triggers after page load
        document.addEventListener("DOMContentLoaded", function () {
            const elements = document.querySelectorAll(".animate-fade-in, .animate-slide-in, .animate-bounce, .animate-zoom-in");
            elements.forEach((el) => {
                el.style.opacity = 1;
                el.style.transform = "translateY(0)";
            });
        });
    </script>
{% endblock %}
