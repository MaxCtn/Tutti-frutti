{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/profile.css') }}">
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!-- Header du profil -->
        <header class="d-flex align-items-center justify-content-between bg-light p-4 rounded shadow-sm">
            <div class="d-flex align-items-center">
                <div class="profile-picture-container">
                    {% if app.user.profilePicture %}
                        <img src="{{ asset('uploads/profile_pictures/' ~ app.user.profilePicture) }}" alt="Photo de profil" class="profile-picture">
                    {% else %}
                        <img src="{{ asset('uploads/profile_pictures/default.jpg') }}" alt="Photo de profil par défaut" class="profile-picture">
                    {% endif %}
                </div>
                <div class="profile-info ms-3">
                    <h4 class="mb-0">{{ app.user.email }}</h4>
                    <p class="text-muted">Bienvenue sur votre profil</p>
                </div>
            </div>
        </header>

        <!-- Barre de filtres -->
        <section class="filters mt-5 mb-4">
            <form method="get" action="{{ path('profile') }}" class="d-flex flex-column align-items-center">
                <div class="row mb-3 justify-content-center">
                    {% for field, placeholder in {
                        'fruit': 'Fruit',
                        'year': 'Année',
                        'title': 'Titre',
                        'label': 'Label'
                    } %}
                        <div class="col-md-3">
                            <input type="text" name="{{ field }}" class="form-control" placeholder="{{ placeholder }}" value="{{ app.request.get(field) }}">
                        </div>
                    {% endfor %}
                </div>
                <div class="row mb-3 justify-content-center">
                    {% for field, placeholder in {
                        'genre': 'Genre',
                        'format': 'Format'
                    } %}
                        <div class="col-md-3">
                            <input type="text" name="{{ field }}" class="form-control" placeholder="{{ placeholder }}" value="{{ app.request.get(field) }}">
                        </div>
                    {% endfor %}
                    <div class="col-md-3">
                        <select name="sortBy" class="form-control">
                            <option value="title" {% if app.request.get('sortBy') == 'title' %}selected{% endif %}>Titre</option>
                            <option value="year" {% if app.request.get('sortBy') == 'year' %}selected{% endif %}>Année</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <select name="order" class="form-control">
                            <option value="ASC" {% if app.request.get('order') == 'ASC' %}selected{% endif %}>Croissant</option>
                            <option value="DESC" {% if app.request.get('order') == 'DESC' %}selected{% endif %}>Décroissant</option>
                        </select>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary">Filtrer</button>
                </div>
            </form>
        </section>

        <!-- Séparateur -->
        <div class="separator"></div>

        <!-- Albums favoris -->
        <section class="favorites mt-5">
            <h2 class="text-center mb-4">Vos Albums Favoris</h2>
            <div class="row">
                {% if favorites is defined and favorites|length > 0 %}
                    {% for favorite in favorites %}
                        <div class="col-md-4 mb-4">
                            <div class="card shadow-sm">
                                {% if favorite.coverImage %}
                                    <img src="{{ favorite.coverImage }}" class="card-img-top" alt="Couverture de l'album {{ favorite.title }}">
                                {% else %}
                                    <div class="no-cover text-center p-4 text-muted">Pas d'image disponible</div>
                                {% endif %}
                                <div class="card-body">
                                    <h5 class="card-title">{{ favorite.title|default('Titre indisponible') }}</h5>
                                    <p class="card-text text-muted">Année : {{ favorite.year|default('Non renseignée') }}</p>

                                    <p class="card-text text-muted">
                                        Fruits associés :
                                        {% if favorite.fruits|length > 0 %}
                                            {% for fruit in favorite.fruits %}
                                                <span class="badge bg-success">{{ fruit.name }}</span>
                                            {% endfor %}
                                        {% else %}
                                            <span class="text-muted">Aucun fruit associé</span>
                                        {% endif %}
                                    </p>

                                    <div class="text-center mt-3">
                                        <a href="{{ path('album_details', {'id': favorite.albumId}) }}" class="btn btn-primary btn-sm">Voir détails</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p class="text-center text-muted">Vous n'avez encore ajouté aucun album favori.</p>
                {% endif %}
            </div>
        </section>
    </div>
{% endblock %}
